.feedback
	&__in
		padding-top 37px
		padding-bottom 0px
		@extend .in
		text-align center
	&__title
		margin-bottom 30px
		color white
		font-calibri
		set-font-size(33px)
		font-weight 400
		line-height 30px
		line-height remify(30px)
		text-align center
	&__list
		font-size 0
		display inline-block
		vertical-align top
	&__item
		position relative
		margin-bottom 41px
		padding-top 17px
		padding-left 100px
		// padding-right 20px
		width 450px
		// width 346px
		display inline
		display inline-block
		vertical-align top
		text-align left
		&:nth-child(2n)
			margin-left 0
	&__photo
		position absolute
		top 0
		left 0
		float left
		border 5px solid #ffa200
		padding 5px
		width 82px
		height 82px
		background-color #3375A9
		border-radius 50%
		-moz-box-sizing border-box
		box-sizing border-box
		img
			width 63px
			height 63px
			display block
			border-radius 50%
			-moz-box-sizing border-box
			box-sizing border-box
	&__name
		margin-bottom 8px
		color white
		font-calibri()
		set-font-size(16px)
		font-weight 700
		line-height 16px
		line-height remify(16px)
	&__text
		color white
		font-calibri
		set-font-size(15px)
		font-weight 400
		line-height 1
