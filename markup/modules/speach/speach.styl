.speach
	&__in
		position relative
		padding-top 37px
		padding-bottom 41px
		@extend .in
	&__w
		padding-right 18px
		padding-left 300px
	&__title
		margin-left -6px
		margin-bottom 38px
		color white
		font-calibri
		set-font-size(33px)
		font-weight 700
		text-transform uppercase
		text-align left
	&__text
		margin-bottom 20px
		color white
		set-font-size 15px
		font-weight 400
		line-height 17px
	&__blockquote
		position relative
		margin-bottom 20px
		background-color #196dad
		color #FFF
		span
			display inline
			display inline-block
			padding 30px 60px 30px 60px
			&:after
				position absolute
				content ""
				bottom 33px
				right 48px
				bg($blockquote-right)
			&:before
				position absolute
				content ""
				top 25px
				left 22px
				bg($blockquote-left)
	&__photo
		position absolute
		top 105px
		left 18px
		width 242px

	&__photo-body
		margin-bottom 20px
		size 260px 362px
		img
			max-width 100%
			height 100%
	&__photo-caption
		text-align center
		color #FFF
		span
			margin-bottom 22px
			display block
			set-font-size(18px)
			font-weight 700
	&__photo-text
		set-font-size(15px)
		font-weight 400
		line-height 17px
		color #b1d7f3


